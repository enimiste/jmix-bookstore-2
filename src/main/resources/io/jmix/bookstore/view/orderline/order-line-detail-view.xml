<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://orderLineDetailView.title"
      focusComponent="productField">
    <data>
        <instance id="orderLineDc"
                  class="io.jmix.bookstore.order.entity.OrderLine">
            <fetchPlan extends="_base">
                <property name="unitPrice" fetchPlan="_base"/>
                <property name="discount" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="orderLineDc">
            <vbox colspan="2">
                <h4 text="msg://product"/>
                <formLayout dataContainer="orderLineDc">
                    <entityComboBox id="productField" dataContainer="orderLineDc" property="product">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityOpen" type="entity_open"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                        <itemsQuery class="io.jmix.bookstore.product.Product" escapeValueForLike="true"
                                    searchStringFormat="(?i)%${inputString}%">
                            <fetchPlan extends="_base"/>
                            <query>
                                <![CDATA[select e from bookstore_Product e where e.name like :searchString escape '\' order by e.name]]>
                            </query>
                        </itemsQuery>
                    </entityComboBox>
                    <textField id="quantityField" dataContainer="orderLineDc" property="quantity" maxWidth="10em"/>
                </formLayout>
            </vbox>
            <vbox>
                <h4 text="msg://price"/>
                <formLayout dataContainer="orderLineDc">
                    <textField id="unitPriceAmountField" dataContainer="orderLineDc" property="unitPrice.amount"/>
                    <select id="unitPriceCurrencyField" dataContainer="orderLineDc" property="unitPrice.currency"/>
                </formLayout>
            </vbox>
            <vbox>
                <h4 text="msg://discount"/>
                <formLayout dataContainer="orderLineDc">
                    <textField id="discountAmountField" dataContainer="orderLineDc" property="discount.amount"/>
                    <select id="discountCurrencyField" dataContainer="orderLineDc" property="discount.currency"/>
                </formLayout>
            </vbox>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
