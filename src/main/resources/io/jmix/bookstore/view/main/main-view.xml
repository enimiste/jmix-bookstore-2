<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<mainView xmlns="http://jmix.io/schema/flowui/main-view"
          title="msg://MainView.title">
    <actions>
        <action id="logout" type="logout"/>
    </actions>
    <appLayout>
        <navigationBar>
            <header id="header" classNames="jmix-main-view-header">
                <drawerToggle id="drawerToggle"
                              classNames="jmix-main-view-drawer-toggle"
                              themeNames="contrast"
                              ariaLabel="msg://drawerToggle.ariaLabel"/>
                <h1 id="viewTitle" classNames="jmix-main-view-title"/>
                <hbox spacing="true" margin="true" alignItems="CENTER" classNames="ms-auto">
                    <avatar image="avatars/unknown.png" id="userAvatar"/>
                    <userIndicator id="userIndicator"/>
                    <span id="positionLabel" themeNames="badge"/>
                    <button classNames="jmix-logout-button" id="logoutButton" action="logout"/>
                </hbox>
            </header>
        </navigationBar>
        <drawerLayout>
            <section id="section" classNames="jmix-main-view-section">
                <h2 id="applicationTitle"
                    classNames="jmix-main-view-application-title">
                    <anchor id="baseLink"
                            href="."
                            text="msg://applicationTitle.text"
                            classNames="jmix-main-view-application-title-base-link"/>
                </h2>
                <nav id="navigation"
                     classNames="jmix-main-view-navigation"
                     ariaLabel="msg://navigation.ariaLabel">
                    <listMenu id="menu"/>
                </nav>
                <footer id="footer" classNames="jmix-main-view-footer">
                    <span text="Tenant:"/>
                    <span id="tenantLabel" themeNames="badge contrast"/>
                </footer>
            </section>
        </drawerLayout>
        <initialLayout spacing="true" margin="true">
            <vbox expand="welcomeBox" alignItems="CENTER">
                <image id="mainLogoImage" classNames="bookstore-main-screen-logo mb-xl"
                       width="500px" resource="branding/main-screen-logo-grey.png" themeNames="contain"/>
                <image id="userAvatarImage"
                       width="100px"
                       themeNames="contain"
                       resource="avatars/unknown.png"/>
                <hbox spacing="true" id="welcomeBox">
                    <h2 id="welcomeMessage" alignSelf="CENTER"/>
                </hbox>
            </vbox>
        </initialLayout>
    </appLayout>
</mainView>